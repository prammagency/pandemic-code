        "AS_NUMBER": {
          "operators": [
            "EQUALS", "DOES_NOT_EQUAL", 
            "LESS_THAN", "LESS_THAN_OR_EQUAL", 
            "GREATER_THAN", "GREATER_THAN_OR_EQUAL",
            "CONTAINS", "DOES_NOT_CONTAIN"  // (for numbers, 'contains' might check digit sequence)
