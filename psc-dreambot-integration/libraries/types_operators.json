    "Variable": {
      "class_description": "Filters for variable values (for use in conditions).",
      "types": {
        "AS_TEXT": {
          "operators": [
            "EQUALS", "DOES_NOT_EQUAL", "CONTAINS", "DOES_NOT_CONTAIN", 
            "STARTS_WITH", "ENDS_WITH",
            "IS_IN_LIST", "NOT_IN_LIST"
